<?xml version="1.0"?><!DOCTYPE hibernate-mapping
  PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping>
  <class name="Personnes" table="personnes">
    <id name="idPersonne" type="int" column="idpersonne">
      <generator class="native"/>
    </id>
     <property name="prenomPersonne" type="string" not-null="true" column="prenompersonne" />
    <property name="nomPersonne" type="string" not-null="true"  column="nompersonne"/>
    <property name="datenaissPersonne" type="date" not-null="true" column="datenaisspersonne">
      <meta attribute="field-description">date de naissance</meta>
    </property>
  </class>
</hibernate-mapping>